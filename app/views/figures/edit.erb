<h1>Edit <%=@figure.name%></h1>
<form action="/figures/<%=@figure.id%>" method="POST">
<input type='hidden' name='_method' value='patch'>
<label>Edit Name: </label>
<input type="text" id="figure_name" name="figure[name]" value='<%=@figure.name%>'>

<br>

<br>

<label>Edit Titles</label><br>
<% Title.all.each do |title| %><br>
<label><%=title.name%></label>
<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id='<%title.name%>' <%= 'checked' if @figure.titles.include?(title)%>  >
<%end%>

<br>
<br><br>
<label> Add new Title</label>
<input type="text" id="new_title" name="title[name]">
<br>
<br>
<label>Edit Landmarks: </label><br><br>
        <% Landmark.all.each do |landmark| %>
        <label><%=landmark.name%></label>
            <input type='checkbox' name='figure[landmark_ids][]' value='<%= landmark.id %>' id='<%= landmark.name %>' <%= 'checked' if @figure.landmarks.include?(landmark)%>><br>
        <% end %>
<br>

 <label>Add New Landmark: </label>
        <input type='text' id='new_landmark' name='landmark[name]'><br>


<br>
<input type="submit" value="Edit Figure">


















</form>